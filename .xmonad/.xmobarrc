Config { 
     font =         "xft:Inconsolata:style=Regular:size=10"
   , bgColor =      "#2d2d2d"
   , fgColor =      "#d3d0c8"
   , position =     Top
   , border =       BottomB
   , borderColor =  "#2d2d2d"
   --, badColor =			"#f2777a"
   --, goodColor =			"#99cc99"
   --, mehColor =			"#ffcc66"
   , sepChar =  "%"   
   , alignSep = "}{"  
   , template = "  %StdinReader% }{ <action=`python -m xnm`>%dynnetwork% </action>    %battery%    %multicpu%    %coretemp%     %memory%    %date%  "
   , lowerOnStart =     False    -- send to bottom of window stack on start
   , hideOnStart =      False   -- start with window unmapped (hidden)
   , allDesktops =      True    -- show on all desktops
   , overrideRedirect = True    -- set the Override Redirect flag (Xlib)
   , pickBroadest =     False   -- choose widest display (multi-monitor)
   , persistent =       True    -- enable/disable hiding (True = disabled)
   , commands = 
        [ 


        -- network monitor 
        	Run DynNetwork     [ "--template" , "Net: U<tx>|D<rx>" --kB/s
                             , "--Low"      , "1000"       -- units: kB/s
                             , "--High"     , "5000"       -- units: kB/s
                             , "--low"      , "#99cc99"
                             , "--normal"   , "#6699cc"
                             , "--high"     , "#6699cc"
                             ] 10

        -- cpu activity monitor
        , Run MultiCpu       [ "--template" , "Cpu: <total0>|<total1>"
                             , "--Low"      , "50"         -- units: %
                             , "--High"     , "85"         -- units: %
                             , "--low"      , "#99cc99"
                             , "--normal"   , "#ffcc66"
                             , "--high"     , "#f2777a"
                             ] 10

        -- cpu core temperature monitor
        , Run CoreTemp       [ "--template" , "Temp: <core0>|<core1>"
                             , "--Low"      , "70"        -- units: °C
                             , "--High"     , "80"        -- units: °C
                             , "--low"      , "#99cc99"
                             , "--normal"   , "#ffcc66"
                             , "--high"     , "#f2777a"
                             ] 50
                         --°C 
        -- memory usage monitor
        , Run Memory         [ "--template" ,"Mem: <usedratio>"
                             , "--Low"      , "20"        -- units: %
                             , "--High"     , "80"        -- units: %
                             , "--low"      , "#99cc99"
                             , "--normal"   , "#ffcc66"
                             , "--high"     , "#f2777a"
                             ] 10

        -- battery monitor
				--, Run Battery		[
        , Run Battery        [ "--template" , "Batt: <acstatus>"
                             , "--Low"      , "15"        -- units: %
                             , "--High"     , "80"        -- units: %
                             , "--low"      , "#f2777a"
                             , "--normal"   , "#ffcc66"
                             , "--high"     , "#99cc99"

                             , "--" -- battery specific options
                                       -- discharging status
                                       , "-o"	, "<left>% (<timeleft>)"
                                       -- AC "on" status
                                       , "-O"	, "<fc=#dAA520>Charging</fc> <left>%"
                                       -- charged status
                                       , "-i"	, "<fc=#99cc99>Charged</fc>"
                             ] 50
        -- stdin reader
        , Run StdinReader

        -- datetime indicator 
        , Run Date           "<fc=#99cc99>%a</fc> <fc=#6699cc>%F</fc> %T" "date" 10 --"<fc=#ABABAB>%F (%a) %T</fc>" "date" 10
        ]
   }
